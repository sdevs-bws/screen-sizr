{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
      "types": ["node"],
      "module": "es2015",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "outDir": "dist/esm",
      "sourceMap": false,
      "strict": true,
      "target": "es2020"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
  }